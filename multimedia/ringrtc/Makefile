BORINGSSL_REV=		e724ef02089bf2bb494203231fc5cb62acc2fad6
BUILD_REV=		8e0612cd2c4e4d7c15a456384760815bdbd64ef1
BUILDTOOLS_REV=		e4f992c0660e6cee637c7b97aabf04d0a58d5555
